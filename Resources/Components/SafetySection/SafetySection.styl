dark-accent = #94A9D1
light-accent = #F6CFCF

tablet = 768px
laptop = 1280px
desktop = 1920px

div.safety-section
    padding: 24px 0
    
    div.section-header
        margin-bottom: 70px

    div.code-block
        background: #FBFBFB

        //appearance
        border-radius: 10px
        box-shadow: 0 3px 0px 0px rgba(0, 0, 0, 0.1)
        
        //size
        width: 250px
        padding: 15px

        //position
        margin: 0 auto
        margin-bottom: 12px

        @media screen and (min-width: tablet)
            padding: 24px
            width: 80%
            max-width: 400px

    h3
        margin: 0
        margin-bottom: 12px
        padding: 0 24px
        
        text-align: center
        font-size: 14px
        font-weight: 500
        color: #777

    span.comment
        display: block
        padding: 0 24px
        width: 250px
        margin: 0 auto
        margin-bottom: 70px
        line-height: 18px
        
        @media screen and (min-width: tablet)
            width: 80%
            max-width: 400px
        
        //font
        text-align: center
        font-size: 12px
        font-weight: 300
        color: #aaa

        code
            color: #92a0b9
            background: #fbfbfb
            font-family: 'Source Code Pro', monospace
            padding: 1px 3px
            border-radius: 3px